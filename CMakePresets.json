{
    "version": 8,
    "configurePresets": [
        {
            "name": "Debug",
            "displayName": "Debug version",
            "generator": "Ninja",
            "binaryDir": "${workspaceFolder}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "GPOLYLLA_TEST": "ON",
                "GPOLYLLA_RENDERER": "ON",
                "GPOLYLLA_EXE": "ON",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        }
    ]
}